<!DOCTYPE html>
<html>
  <head>
    <title>Palpit8</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  </head>

  <body>
    <nav class="navbar-fixed">
      <div class="nav-wrapper">
        <div class="row">
          <div class="col s2">
            <img class="palp-logo" src="https://fontmeme.com/permalink/170907/3866ede16270b89edc6ef410f8f94195.png" alt="palpit8.tv-logo" width="75%">
          </div>
          <ul class="left hide-on-med-and-down">
              <li><%= link_to "Browse", games_path %></li>
              <% if current_user %>
                <li><%= link_to "Following", dashboard_path %></li>
              <% end %>
              <li><a href="/search"><i class="material-icons left">search</i>Search</i></a></li>
          </ul>
          <ul class="right hide-on-med-and-down">
            <% if current_user %>
              <li><a href="/dashboard"><%= current_users_profile(current_user.token)[:display_name] %></a></li>
              <li><%= link_to "Logout", logout_path %></li>
            <% else %>
              <li><%= link_to "Login", '/auth/twitch' %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
    <%= yield %>
  </body>

    <%= action_cable_meta_tag %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</html>
