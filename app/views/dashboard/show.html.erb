<div id="profile"class= "row">
  <img class="col s2 push-s1" src="<%= @profile.logo %>" alt="<%= @profile.username %>'s profile picture" width="100%">
  <div class="col s6 push-s1">
    <p class="profile-name"><%= @profile.username %>'s Profile</p>
    <div class="profile-bio">
      <p><strong>Bio:</strong></p>
      <p><%= @profile.bio %></p>
    </div>
  </div>
</div>

<div class="divider"></div>

<h4 id="follow-channel">Followed Channels</h4>

<div class="container">
  <div class="row">
  <% @profile.channels.each do |channel| %>
    <div class="col s3">
      <a href="/streamers/<%= channel.channel_id %>">
        <img src="<%= channel.logo %>" alt="profile-logo" width="100%">
        <p id="channel-name"><%= channel.name %></p>
      </a>
    </div>
  <% end %>
  </div>
</div>

<div class="divider"></div>
