<body>
<div class="divider"></div>

  <div class="show-header">
      <%= @game_streams.game_name %>
  </div>

<div class="divider"></div><br>

<div class="row">
  <% @game_streams.streams.each do |stream| %>
    <div class="col s3">
      <a href="<%= streamer_path(stream.streamer_id) %>#stream"><img src="<%= stream.preview %>" alt="Stream preview" width="100%"><br>
